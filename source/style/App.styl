html
  border-top 2px solid #c9cacc

body
  font-family "Menlo", "Meslo LG", monospace
  font-size 14px
  font-weight 500
  margin 0
  overflow-y scroll
  color #485763
  background-color #fff

a
  color #485763
  text-decoration none
  transition color 0.15s ease

.header
  font-size 16px
  height 55px
  overflow hidden
  .inner
    max-width 800px
    box-sizing border-box
    margin 0px auto
    padding 15px 20px
  a
    color #485763
    line-height 24px
    display inline-block
    vertical-align middle
    font-weight 300
    letter-spacing .075em
    margin-right 1.8em
    &:hover
      color #3eaf7c
    &.router-link-active
      color #3eaf7c
      font-weight 400
    &:nth-child(6)
      margin-right 0

.logo
  height 24px
  margin-right 10px
  display inline-block
  vertical-align middle

.view
  max-width 800px
  margin 0 auto
  position relative

.fade-enter-active, .fade-leave-active
  transition all .2s ease

.fade-enter, .fade-leave-active
  opacity 0


@media (max-width 860px)
  .header .inner
    padding 15px 21px

@media (max-width 600px)
  .header
    font-size 14px
    .inner
      padding 15px 21px
    a
      margin-right 1em
